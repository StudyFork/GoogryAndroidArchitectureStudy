<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rv_item_iv_movie_image"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_item_tv_movie_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="영화 제목"
        app:layout_constraintStart_toEndOf="@+id/rv_item_iv_movie_image"
        app:layout_constraintTop_toTopOf="@id/rv_item_iv_movie_image" />

    <RatingBar
        android:id="@+id/rv_item_rb_movie_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:numStars="5"
        android:stepSize="0.5"
        app:layout_constraintStart_toStartOf="@id/rv_item_tv_movie_title"
        app:layout_constraintTop_toBottomOf="@id/rv_item_tv_movie_title" />

    <TextView
        android:id="@+id/rv_item_tv_movie_pubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="개봉년도"
        app:layout_constraintStart_toStartOf="@id/rv_item_tv_movie_title"
        app:layout_constraintTop_toBottomOf="@id/rv_item_rb_movie_rating" />

    <TextView
        android:id="@+id/rv_item_tv_movie_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="감독"
        app:layout_constraintStart_toStartOf="@id/rv_item_tv_movie_title"
        app:layout_constraintTop_toBottomOf="@id/rv_item_tv_movie_pubDate" />

    <TextView
        android:id="@+id/rv_item_tv_movie_actor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="배우"
        app:layout_constraintStart_toStartOf="@id/rv_item_tv_movie_title"
        app:layout_constraintTop_toBottomOf="@id/rv_item_tv_movie_director" />

</androidx.constraintlayout.widget.ConstraintLayout>
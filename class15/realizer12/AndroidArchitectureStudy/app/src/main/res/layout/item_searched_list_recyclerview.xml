<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recentSearchActivity"
            type="com.example.androidarchitecturestudy.RecentSearchActivity" />

        <variable
            name="searchMovieTitleData"
            type="String" />
    </data>

    <TextView
        android:id="@+id/tv_searched_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@{searchMovieTitleData}"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="최근 검색 영화 제목" />
</layout>